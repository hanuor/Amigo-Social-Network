<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="chap.hanuor.com.chatapp.Settings">
    <FrameLayout
        android:layout_width="match_parent"


        android:id="@+id/comp"
        android:layout_height="match_parent">    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/imageCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blue"
        android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">


            <View
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/intro_fragcolor"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/intro_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:paddingTop="24dp"
                app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:background="@android:color/transparent">
            </android.support.v7.widget.Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_below="@+id/toolbar"
                android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="#00555555">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Introducing 'The board'"
                    android:id="@+id/board"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="7dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="'The board' contains the latest post of your friends. You can view each post by just clicking on them."
                    android:layout_below="@+id/board"
                    android:layout_margin="4dp"
                    android:id="@+id/subboard"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Modifying covers / How to write and view your own 'pin'"
                    android:id="@+id/status"
                    android:layout_below="@+id/subboard"
                    android:layout_margin="7dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="To write a pin you can click on the write icon which appears on the bottom right corner of the board. Adding a cover to your pin will make it look attractive as well as interesting. However, if you want to change your cover after submitting a pin, you can do so by navigating to 'Your Profile' section. Here you can also check out the details related to your pin. For now Amigo does not follow the stack principle, i.e. you cannot view/edit/modify your previous pin once a new pin has been made."
                    android:layout_below="@+id/status"
                    android:id="@+id/substatus"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Introducing 'Social Notoriety' "
                    android:id="@+id/socialnot"
                    android:layout_below="@+id/substatus"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="7dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="The main feature of Amigo, 'Social Notoriety' defines how socially famous you are. For every friend that you make, they will vote you on the basis of your personality, Social Quotient*, etc. Though it sounds fun but social notoriety can backfire too! A new sub-feature to maintain the psych balance is Social Quotient. While your friends determine how socially notorious you are, we define your Social Quotient ( and yes we do not cheat). Your Social  Quotient is determined keeping in mind your pins, i.e. what your pins are about, how many comments/shares/likes has it fetched etc. A good Social Quotient means that you get to casual chat with cool strangers."
                    android:layout_below="@+id/socialnot"
                    android:layout_margin="4dp"
                    android:id="@+id/subsocialnot"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="more coming soon..."
                        android:id="@+id/more"
                        android:layout_below="@+id/subsocialnot"
                        android:fontFamily="sans-serif-light"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_margin="7dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>



            </RelativeLayout>
            </ScrollView>

        </RelativeLayout>


    </FrameLayout>
</RelativeLayout>
