<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

<FrameLayout
    android:layout_width="match_parent"
android:background="#1A000000"

    android:id="@+id/comp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <View
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/intro_fragcolor"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"

        xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:minWidth="0dp"
            android:minHeight="0dp"
            android:id="@+id/image"
            tools:context="chap.hanuor.com.chatapp.NavigationDrawerFragment">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="102dp"
                android:id="@+id/relLayout"

                android:layout_marginLeft="32dp">

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erica Sunn"
                android:layout_marginTop="7dp"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:id="@+id/texi"
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/userimage"
                android:layout_toEndOf="@+id/relLayout" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:src="@drawable/default_pic"
                android:clickable="true"
                app:civ_border_width="0.3dp"
                app:civ_border_color="#FFFFFF"

                android:layout_height="100dp"
                android:id="@+id/userimage"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/relLayout" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
android:background="#1A000000"
            android:id="@+id/rec"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image"></android.support.v7.widget.RecyclerView>
        <!-- TODO: Update blank fragment layout -->


    </RelativeLayout>

</FrameLayout>

    </FrameLayout>




