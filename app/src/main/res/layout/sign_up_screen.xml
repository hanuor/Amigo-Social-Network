<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"


        android:id="@+id/comp"
        android:layout_height="match_parent">    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/imageCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blue"
        android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">


            <View
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/intro_fragcolor"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/intro_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Greetings!"
                android:gravity="center"

                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:layout_gravity="top|center"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textSize="17sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="61dp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up for Amigo"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="32dp"
                android:layout_margin="19dp"
                android:layout_marginRight="32dp"
                android:textSize="25sp"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true" />
                <EditText android:id="@+id/input_name"
                    android:layout_below="@+id/subtitle"
                    android:layout_margin="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/ic_stat_personal23"
                    android:background="@drawable/editext_drawable"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:textColorHint="#FFFFFFFF"
                    android:inputType="textPersonName"
                    android:hint="FullName" />

                <EditText android:id="@+id/amigoname"

                    android:layout_margin="11dp"
                    android:layout_below="@+id/input_name"
                    android:layout_width="match_parent"
                    android:drawablePadding="3dp"

                    android:backgroundTint="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:drawableLeft="@drawable/ic_stat_user158"
                    android:background="@drawable/editext_drawable"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="textPersonName"
                    android:hint="Username" />

                <android.support.v7.widget.AppCompatEditText android:id="@+id/input_email"
                    android:layout_margin="11dp"
                    android:layout_width="match_parent"

                    android:layout_below="@+id/amigoname"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:drawablePadding="3dp"
                    android:textColorHighlight="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:textColorHint="#FFFFFF"
                    android:drawableLeft="@drawable/ic_stat_envelope4"
                    android:background="@drawable/editext_drawable"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email" />

                <EditText android:id="@+id/input_password"
                    android:textColorHint="#FFFFFF"
                    android:layout_margin="11dp"
                    android:layout_below="@+id/input_email"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_stat_password10"

                    android:background="@drawable/editext_drawable"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:drawablePadding="3dp"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Password"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbackground"
                android:text="Sign Up"

                android:textAllCaps="false"
                android:id="@+id/signupButton"
                android:layout_marginTop="11dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/checkBox"
                android:layout_alignStart="@+id/title" />

            <CheckBox
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:text="Yes, I agree with the privacy terms and conditions as specified."
                android:textColor="#FFFFFF"
                android:id="@+id/checkBox"
                android:layout_below="@+id/input_password"
                android:layout_alignStart="@+id/input_password" />


        </RelativeLayout>

    </FrameLayout>

</FrameLayout>

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:paddingTop="24dp"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@android:color/transparent">
    </android.support.v7.widget.Toolbar>

</FrameLayout>